{
    "manifest_version": 3,
    "version": "1.1",
    "name": "xyuma",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "commands": {
        "send": {
            "suggested_key": "Ctrl+Shift+P",
            "description": "Send xyuma"
        }
    },
    
    "permissions": [
        "activeTab",
        "contextMenus",
        "tts"
    ],

    "host_permissions": [
        "https://denis.qa/*"
    ],

    "background": {
        "service_worker": "background.js"
    }
}
